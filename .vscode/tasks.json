    "version": "0.1.0",
    "windows": {
        "command": "explorer"
    },
    "osx": {
        "command": "open"
    },
    "linux": {
        "command": "xdg-open"
    },
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "View in default browser",
            "args": [
                "${file}"
            ],
            "isBuildCommand": true
        }
    ],
    "showOutput": "never"
}